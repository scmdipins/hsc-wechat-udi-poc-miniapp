page {
  height: 100%;
  width: 100%;
}

image {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  white-space: pre-wrap;
}

/* hide scrollbar */
::-webkit-scrollbar {
  display: none;
  height: 0;
  width: 0;
  color: transparent;
}

button::after {
  border: none;
}

button {
  border-radius: o;
  padding: 0;
  background-color: transparent;
  outline: none;
}

button[disabled] {
  background-color: transparent !important;
}

.text {
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #ffffff;
}

/* 文字超出显示省略号 1行 */
.ellipsis-1 {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 文字超出显示省略号 2行 */
.ellipsis-2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

/* 取消radio默认样式 */
radio {
  display: none;
}

/* 取消checkbox默认样式 */
checkbox {
  display: none;
}